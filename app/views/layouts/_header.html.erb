<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("navigation.sample_app"), static_pages_home_path, id: "logo"%>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("navigation.home"), static_pages_home_path%></li>
        <li><%= link_to t("navigation.help"), static_pages_help_path%></li>
        <li><%= link_to t("navigation.contact"), static_pages_contact_path%></li>

        <% if logged_in? %>
          <li><%= link_to t("navigation.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= t("navigation.account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("navigation.profile"), current_user %></li>
              <li><%= link_to t("navigation.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("navigation.logout"), logout_path, data: {"turbo-method": :delete} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("navigation.login"), login_path %></li>
        <% end %>

        <li class="language-dropdown">
          <%= link_to "#", class: "language-toggle" do %>
            <%= I18n.locale == :vi ? t("language.vi") : t("language.en") %> <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu1">
            <li><%= link_to t("language.en"), locale: "en" %></li>
            <li><%= link_to t("language.vi"), locale: "vi" %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
