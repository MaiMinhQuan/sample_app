<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to t("header.sample_app"), static_pages_home_path(locale: I18n.locale), id: "logo"%>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t("header.home"), static_pages_home_path(locale: I18n.locale)%></li>
            <li><%= link_to t("header.help"), static_pages_help_path(locale: I18n.locale)%></li>
            <li><%= link_to t("header.contact"), static_pages_contact_path(locale: I18n.locale)%></li>
            <li><%= link_to t("header.login"), "#"%></li>

            <li class="language-dropdown">
              <%= link_to "#", class: "language-toggle" do %>
                <%= I18n.locale == :vi ? t("language.vi") : t("language.en") %> <span class="caret"></span>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t("language.en"), locale: "en" %></li>
                <li><%= link_to t("language.vi"), locale: "vi" %></li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </header>
